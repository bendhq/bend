# =====================================================
# .npmrc - Bend CLI publishing & install defaults
# =====================================================

# Always publish packages publicly (not restricted)
access=public

# Use the official npm registry
registry=https://registry.npmjs.org/

# Save exact versions when installing
save-exact=true

# Disable package-lock.json creation (we skip lock files for CLIs)
package-lock=false

# Prefer color output in npm CLI
color=true

# Log only minimal info during installs
loglevel=warn

# Optional: prevent accidental script execution on install
ignore-scripts=false
