import mongoose from '../db/mongoose.js';

const userSchema = new mongoose.Schema(
  {
    email: {
      type: String,
      required: true,
      unique: true,
      trim: true
    },
    name: {
      type: String,
      trim: true
    },
    password: {
      type: String,
      required: false
    }
  },
  { timestamps: true }
);

const User = mongoose.model('User', userSchema);

export default User;
