{
  "watch": ["src"],
  "ext": "<%= language === 'typescript' ? 'ts,json' : 'js,json' %>",
  "ignore": ["dist", "node_modules"],
  "exec": "<% if (language === 'typescript') { %>ts-node --transpile-only src/server.ts<% } else { %>node src/server.js<% } %>",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "200"
}
