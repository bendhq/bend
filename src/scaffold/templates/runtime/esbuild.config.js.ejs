import { build } from "esbuild";
import { rmSync } from "node:fs";

const outdir = "dist";

rmSync(outdir, { recursive: true, force: true });

await build({
  entryPoints: ["src/server.js"],
  outdir,
  bundle: true,
  platform: "node",
  target: "node20",
  format: "esm",
  sourcemap: true,
  minify: false,
  logLevel: "info",
});

console.log("Build completed successfully.");
