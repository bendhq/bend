{
  "name": "bend-core",
  "version": "1.0.5",
  "description": "Production-ready backend scaffolder for Node.js and Bun - Core library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "bend-core": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.mjs",
      "require": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src/scaffold/templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli/index.ts --format cjs,esm --out-dir dist --shims --no-splitting && node ../../scripts/compile-templates.mjs",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.js"
  },
  "keywords": [
    "backend",
    "scaffolder",
    "generator",
    "express",
    "fastify",
    "mongoose",
    "prisma",
    "typescript",
    "javascript",
    "nodejs",
    "bun",
    "cli",
    "template"
  ],
  "author": "Dhiraj",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bendhq/bend.git",
    "directory": "packages/bend-core"
  },
  "homepage": "https://bendhq.org",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "0.11.0",
    "commander": "14.0.2",
    "ejs": "^3.1.10",
    "picocolors": "1.1.1"
  },
  "devDependencies": {
    "@types/node": "24.10.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0"
  }
}
