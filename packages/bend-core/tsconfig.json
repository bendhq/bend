{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "noEmit": false,
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "bend-core/*": ["src/*"],
      "bend-core": ["src/index"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
