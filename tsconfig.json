{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "incremental": true,
    "paths": {
      "bend-core": ["packages/bend-core/src"],
      "bend-core/*": ["packages/bend-core/src/*"]
    }
  },
  "references": [
    { "path": "packages/bend-core" }
  ]
}
